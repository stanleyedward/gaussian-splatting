{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: train.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/train.py",
      "args": ["--source_path", "${workspaceFolder}/lego",
               "--iterations", "7000",
               "--save_iterations", "7000",
               "--test_iterations", "7000",
               "--debug-from", "-1",
